<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/lll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/chanprofTitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/to_round_stroke_selector"
            android:gravity="clip_vertical"
            android:padding="5dp"
            android:text="Change Profile"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chanprofTitle"
            android:background="@drawable/down_rounded_stroked"
            android:fadingEdge="none"
            android:paddingBottom="10dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/tvRegFName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/to_round_stroke_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="First name :"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etRegFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvRegFName"
                    android:background="@drawable/rounded_corner_stroked"
                    android:hint="firstname"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/theme_txtclr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRegLName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etRegFName"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/to_round_stroke_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Last name :"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etRegLName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvRegLName"
                    android:background="@drawable/rounded_corner_stroked"
                    android:hint="lastname"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/theme_txtclr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvvvv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etRegLName"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/to_round_stroke_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="DOB :"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/llljlj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvvvv"
                    android:background="@drawable/rounded_corner_stroked"
                    android:orientation="horizontal"
                    android:padding="5dp" >

                    <Spinner
                        android:id="@+id/spinYearC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@android:color/transparent" />

                    <Spinner
                        android:id="@+id/spinMonthC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />

                    <Spinner
                        android:id="@+id/spinDayC"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvRegCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/llljlj"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/to_round_stroke_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Country :"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etRegCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvRegCountry"
                    android:background="@drawable/rounded_corner_stroked"
                    android:hint="country"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/theme_txtclr"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRegCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etRegCountry"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/to_round_stroke_selector"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="City :"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/etRegCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvRegCity"
                    android:background="@drawable/rounded_corner_stroked"
                    android:hint="city"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/theme_txtclr"
                    android:textSize="14sp" />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/lll"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/butChangeProf"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_selector"
            android:text="Change"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/butCancelProf"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:background="@drawable/btn_selector"
            android:text="cancel"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>
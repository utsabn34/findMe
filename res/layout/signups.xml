<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fadingEdge="none"
    android:layout_height="match_parent"
    android:background="@color/theme_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/eTUsername"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Username"
            tools:ignore="HardcodedText" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/eTPassword"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Password"
            tools:ignore="HardcodedText" >
        </EditText>

        <EditText
            android:id="@+id/eTCPassword"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Confirm Password"
            tools:ignore="HardcodedText" >
        </EditText>

        <EditText
            android:id="@+id/eTEmail"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="Email"
            tools:ignore="HardcodedText" >
        </EditText>

        <EditText
            android:id="@+id/eTFname"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="first name"
            tools:ignore="HardcodedText" >
        </EditText>

        <EditText
            android:id="@+id/eTLname"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="last name"
            tools:ignore="HardcodedText" >
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="DOB:" />

            <Spinner
                android:id="@+id/spinYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/transparent" />

            <Spinner
                android:id="@+id/spinMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/transparent" />

            <Spinner
                android:id="@+id/spinDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spnrCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/eTcity"
            style="@style/myET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="city"
            tools:ignore="HardcodedText" >
        </EditText>

        <TextView
            android:id="@+id/topdfup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/theme_"
            android:gravity="left"
            android:padding="7dp"
            android:text="Upload a Photo(Not necessary)"
            android:textColor="@color/theme_color"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/lsisup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_doun_round"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnGall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttnselector_left"
                android:gravity="center"
                android:text="From Gallery"
                android:textColor="@color/theme_"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_1" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/buttnselector"
                android:gravity="center"
                android:text="Take a Picture"
                android:textColor="@color/theme_"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/butSignups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_selector"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="Sign Up"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</ScrollView>
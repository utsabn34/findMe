<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    
    <style name="AppBaseTheme" parent="Theme.">
    -->
    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        
    </style>
    -->

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.Holo.ProgressBar.Horizontal"></style>
    <!--
    Application theme. 
    <style name="AppTheme" parent="AppBaseTheme">
    -->
    <!--
    All customizations that are NOT specific to a particular API-level can go here. 
    </style>
    -->

    <style name="myET" parent="@android:style/TextAppearance">
        <item name="android:typeface">sans</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_darkgebr</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_out_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_in_top</item>
    </style>
     <style name="DialogAnimationFade">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="DialogAnimationPop">
        <item name="android:windowEnterAnimation">@anim/zoom_comb</item>
        <item name="android:windowExitAnimation">@anim/zoom</item>
    </style>

    <style name="TabText">
        <item name="android:textColor">@drawable/text_selector</item>
    </style>

</resources>